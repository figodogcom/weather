<?xml version="1.0" encoding= "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="显示温度:"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/fragment_setting_common_huashi"
            android:textSize="18sp"
            android:text="华氏度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/fragment_setting_common_sheshi"
            android:textSize="18sp"
            android:text="摄氏度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <ImageView
        android:layout_marginTop="10dp"

        android:background="#666666"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="启动位置"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="应用重启后更改生效"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/fragment_setting_common_location"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="始终检测我的位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/fragment_setting_common_default"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="默认位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RadioGroup>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"

        android:layout_width="280dp"
        android:layout_height="40dp">

        <AutoCompleteTextView
            android:id="@+id/fragment_setting_common_autocompletetextview"
            android:hint="广东省珠海市"
            android:completionThreshold="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/ic_close_black_24dp"
            android:background="#FFFFFF"
            android:layout_toLeftOf="@+id/fragment_setting_common_search"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:background="#FFFFFF"
            android:id="@+id/fragment_setting_common_search"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </RelativeLayout>



</LinearLayout>