<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sevenday_view"
    android:layout_width="120dp"
    android:layout_height="170dp"
    android:clickable="true"
    android:orientation="vertical"


    android:weightSum="1">
    <!--android:background="@drawable/boder"-->

    <TextView
        android:id="@+id/seven_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:longClickable="false"
        android:text="14日（星期五）"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/seven_itageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/d01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seven_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="27°"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/seven_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="25°"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/seven_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="晴天"
        android:textSize="16sp" />


</LinearLayout>